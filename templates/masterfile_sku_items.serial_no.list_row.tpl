{*07/16/2013 05:25 PM Justin- Enhanced to capture or show status by wording instead of numberic.8/12/2013 1:45 PM Justin- Enhanced to show user can change customer info while has privilege.4/18/2014 2:54 PM Justin- Enhanced to allow user search by Serial No.8/7/2014 9:19 AM Justin- Enhanced to have remark column.6/18/2015 11:38 AM Justin- Enhanced to have GRN No column.*}{if $item.active eq '1'}	{assign var=active value=0}{else}	{assign var=active value=1}{/if}{if !$item.is_update}<tr class="sn_dtl" id="sn_row{$item.id}_{$item.branch_id}">{/if}	<td nowrap>		{if $item.status eq 'Sold'}			<img src="/ui/pixel.gif" width="15" align="absmiddle" border="0">		{else}			<img src="{if $item.active eq '1'}/ui/rejected.png{else}/ui/act.png{/if}" onclick="delete_sn_items('{$item.id}', '{$item.branch_id}', '{$active}', this);" title="{if $item.active eq '1'}Deactivate{else}Activate{/if}" id="{$item.id}_{$item.branch_id}" align="absmiddle" border="0">		{/if}		<span class="no" id="no">{$smarty.foreach.i.iteration}.</span>		<div id="inac_msg{$item.id}_{$item.branch_id}" class="small" {if $item.active eq '1'}style="display:none;"{/if}>(Inactive)</div>	</td>	<td align="center">		<input size=20 type="text" name="serial_no[{$item.id}][{$item.branch_id}]" id="serial_no{$item.id}_{$item.branch_id}" value="{$item.serial_no}" {if $item.status eq 'Sold'}readonly{/if}>		<input type="hidden" name="sid[{$item.id}][{$item.branch_id}]" value="{$item.sku_item_id|default:0}">		<input type="hidden" name="sn_branch_id[{$item.id}][{$item.branch_id}]" value="{$item.branch_id|default:0}">		<input type="hidden" name="sn_located_branch_id[{$item.id}][{$item.branch_id}]" value="{$item.located_branch_id|default:0}">		<input type="hidden" name="status[{$item.id}][{$item.branch_id}]" id="status{$item.id}_{$item.branch_id}" value="{$item.status|default:'Available'}">		<input type="hidden" name="active[{$item.id}][{$item.branch_id}]" id="active{$item.id}_{$item.branch_id}" value="{$item.active|default:1}">		<input type="hidden" name="pos_id[{$item.id}][{$item.branch_id}]" id="pos_id{$item.id}_{$item.branch_id}" value="{$item.pos_id}">		<input type="hidden" name="pos_item_id[{$item.id}][{$item.branch_id}]" id="pos_item_id{$item.id}_{$item.branch_id}" value="{$item.pos_item_id}">		<input type="hidden" name="pos_branch_id[{$item.id}][{$item.branch_id}]" id="pos_branch_id{$item.id}_{$item.branch_id}" value="{$item.pos_branch_id}">		<input type="hidden" name="date[{$item.id}][{$item.branch_id}]" id="date{$item.id}_{$item.branch_id}" value="{$item.date}">		<input type="hidden" name="counter_id[{$item.id}][{$item.branch_id}]" id="counter_id{$item.id}_{$item.branch_id}" value="{$item.counter_id}">	</td>	{if $BRANCH_CODE eq 'HQ'}		<td align="center">{$item.apply_branch_code}</td>	{/if}	<td align="center">{$item.located_branch_code}</td>	<td align="center"><div {if $item.status eq 'Sold'}class="sold"{/if}>{$item.status}</div></td>	{if $sessioninfo.privilege.MST_EDIT_SN_INFO && $item.status eq 'Sold' && $item.pos_id}		<td align="center"><input type="text" name="nric[{$item.id}][{$item.branch_id}]" value="{$item.nric}" /></td>		<td align="center"><input type="text" name="name[{$item.id}][{$item.branch_id}]" value="{$item.name}" /></td>		<td align="center"><input type="text" name="address[{$item.id}][{$item.branch_id}]" value="{$item.address}" onchange="uc(this);" size="40" /></td>		<td align="center"><input type="text" name="contact_no[{$item.id}][{$item.branch_id}]" value="{$item.contact_no}" size="15" /></td>		<td align="center"><input type="text" name="email[{$item.id}][{$item.branch_id}]" value="{$item.email}" size="15" /></td>		<td align="center" nowrap>			<input type="text" name="warranty_expired[{$item.id}][{$item.branch_id}]" id="warranty_expired_{$item.id}_{$item.branch_id}" value="{$item.warranty_expired}" size="10" readonly />			<img align="absmiddle" src="ui/calendar.gif" id="we_{$item.id}_{$item.branch_id}" style="cursor: pointer;" title="Select Warranty Date"> 			{literal}			<script type="text/javascript">				Calendar.setup({					inputField     :    "warranty_expired_{/literal}{$item.id}_{$item.branch_id}{literal}",     // id of the input field					ifFormat       :    "%Y-%m-%d",      // format of the input field					button         :    "we_{/literal}{$item.id}_{$item.branch_id}{literal}",  // trigger for the calendar (button ID)					align          :    "Bl",           // alignment (defaults to "Bl")					singleClick    :    true				});			</script>			{/literal}		</td>	{else}		<td align="center">{$item.nric|ifzero:'-'}</td>		<td align="center">{$item.name}</td>		<td align="center">{$item.address}</td>		<td align="center">{$item.contact_no|ifzero:'-'}</td>		<td align="center">{$item.email}</td>		<td align="center">{$item.warranty_expired|ifzero:'-'}</td>	{/if}	<td align="center"><input type="text" name="remark[{$item.id}][{$item.branch_id}]" value="{$item.remark}" /></td>	<td>{$item.grn_no|default:'-'}</td>	<td>&nbsp;</td>{if !$item.is_update}</tr>{/if}