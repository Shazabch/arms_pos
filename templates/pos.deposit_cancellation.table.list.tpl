{*8/20/2013 10:15 AM Andy- Fix deposit receipt cannot click to show details.- Change Used Deposit cannot be cancel.- Add column "Used Receipt", "Used at Branch" and "Used Amount".3/7/2014 5:34 PM Justin- Enhanced to have new feature that print prefix receipt no if found config set.*}{if $item.active eq '1'}	{assign var=active value=0}{else}	{assign var=active value=1}{/if}<tr class="deposit_dtl">	<td nowrap>		<span class="no" id="no">{$smarty.foreach.i.iteration}.</span>				{if $item.status ne 1 && !$item.not_allow_cancel && !$item.used_info}			<img src="/ui/deact.png" onclick="DEPOSIT_CANCELLATION_MODULE.cancel_deposit_dialog('{$item.pos_id}', '{$item.branch_id}', '{$item.counter_id}', '{$item.date}', '{$item.deposit_amount|default:0}', '{$item.status}');" title="Cancel this Deposit" id="{$item.id}_{$item.branch_id}" align="absmiddle" border="0">		{/if}			</td>	<td align="center">				<a onclick="DEPOSIT_CANCELLATION_MODULE.trans_detail('{$item.counter_id}','{$item.cashier_id}','{$item.date}','{$item.pos_id}','{$item.branch_id}');" class="clickable">{receipt_no_prefix_format branch_id=$item.branch_id counter_id=$item.counter_id receipt_no=$item.receipt_no}</a>		{* if $item.have_item_list}			<a onclick="DEPOSIT_CANCELLATION_MODULE.trans_detail('{$item.counter_id}','{$item.cashier_id}','{$item.date}','{$item.pos_id}','{$item.branch_id}');" class="clickable">{$item.receipt_no}</a>		{else}			{$item.receipt_no}		{/if *}	</td>	<td align="center">{$item.branch_code}</td>		<td align="center">{$item.cashier_name}</td>	<td align="center">{$item.approved_name}</td>	<td align="right">{$item.deposit_amount|number_format:2}</td>	<td align="center">		{if !$item.status}			Received		{elseif $item.status eq '2'}			Used		{else}			Cancelled		{/if}	</td>		{* Used Receipt *}	<td align="center">		{if $item.used_info}			<a onclick="DEPOSIT_CANCELLATION_MODULE.trans_detail('{$item.used_info.counter_id}','{$item.used_info.cashier_id}','{$item.used_info.pos_date}','{$item.used_info.pos_id}','{$item.used_info.branch_id}');" class="clickable">{receipt_no_prefix_format branch_id=$item.used_info.branch_id counter_id=$item.used_info.counter_id receipt_no=$item.used_info.receipt_no}</a>		{else}			-		{/if}		</td>		{* Used at Branch *}	<td align="center">{$item.used_branch_code|default:'-'}</td>		{* Used Amt *}	<td align="right">		{if $item.used_info}			{$item.used_info.used_amt|number_format:2}		{else}			-		{/if}	</td></tr>