r:#999; text-decoration: underline;"><th colspan=2>SKU</th><th>{$config.link_code_name}</th><th>Article No.</th><th>MCode</th><th>Description</th><th>Selling</th><th>Cost</th><th>Profit</th><th>GP(%)</th><th>Price Type</th></tr>{/if}<tr class="small"><td colspan=2>{$sku[i].sku_item_code|default:"&nbsp;"}</td><td>2{$sku[i].multics_brand}{$sku[i].multics_category|substr:-2}</td><td>{$sku[i].artno|default:"&nbsp;"}</td><td>{$sku[i].mcode|default:"&nbsp;"}</td><td>{$sku[i].description|default:"&nbsp;"}</td><td>{$sku[i].selling_price|number_format:2|default:"&nbsp;"}</td><td>{$sku[i].cost_price|number_format:4|default:"&nbsp;"}</td><td>{$sku[i].selling_price-$sku[i].cost_price|number_format:3|default:"&nbsp;"}</td>{assign var=gross value=`$sku[i].selling_price-$sku[i].cost_price`}<td>{if $sku[i].selling_price}{$gross/$sku[i].selling_price*100|number_format:2}%{else}&nbsp;{/if}</td><td align=center>{$sku[i].default_trade_discount_code|default:"&nbsp;"}</td></tr><tr><td colspan=11>&nbsp;</td></tr>{assign var=last_sku_id value=$sku[i].sku_id}{/section}</tbody></table><script>window.print();</script>