{*3/8/2010 11:18:51 AM Andy- Fix incorrect total due to decimal qty problem4/28/2010 10:55:20 AM Andy- Change Report to use pos and pos_items to find the highest and lowest selling price.- Fix wrong gross profit percent bugs- Fix main category cannot show CM figures bugs10/14/2011 11:03:32 AM Justin- Modified the Ctn and Pcs round up to base on config set.5/22/2014 4:13 PM Justin- Enhanced to have export feature for itemise table.*}{if !$no_header_footer}{include file=header.tpl}<script>{literal}function export_itemise_clicked(){	if(parent.window.opener && parent.window.opener.export_itemise_info){		parent.window.opener.export_itemise_info();	}}{/literal}</script><style>{literal}.c1 { background:#ff9; }.c2 { background:#fff; }.c3 { background:#9f9; }.c3_2 { background:#70ffc0; }.c4 { background:#ffccff; }.c4_2 { background:#ffa0f0; }.c5 { background:#6699ff; }.c5_2 { background:#f0e07f; }.r1 { background:#c0fff0;}.r2 { background:#f0f0f0;}.r3 { background:#33ff00;}.r4 { background:#3399ff;}.h1 { background:#00f0ff !important;}{/literal}</style>{/if}<h2>Branch: {$branch_code} &nbsp;&nbsp;&nbsp;&nbsp;Start from: {$smarty.request.hidden_date_msg} &nbsp;&nbsp;&nbsp;&nbsp;Category: {$category_name}</h2><p>Note: Report will shown 1 year result</p>{if !$table}{if $smarty.request.submit && !$err}-- No data --{/if}{else}<!--input type="button" value="Export" onclick="export_itemise_clicked();" class="itemise_btn"-->{if !$no_header_footer}<button onclick="export_itemise_clicked();" name=output_excel>{#OUTPUT_EXCEL#}</button>{/if}<table class=report_table width=100%><tr class=header>	<th rowspan=2>ARMS Code</th>	<th rowspan=2>Description</th>	<th colspan=2>Qty</th>	<th colspan=2>Amount</th>	{if $sessioninfo.privilege.SHOW_REPORT_GP}		<th colspan=2>Gross Profit</th>	{/if}	<th rowspan=2>AVG S.price</th>	<th colspan=2>Selling Price</th></tr><tr class=header>	<th>Sales</th>	<th>Contribution</th>	<th>Sales</th>	<th>Contribution</th>	{if $sessioninfo.privilege.SHOW_REPORT_GP}		<th>Amt</th>		<th>%</th>	{/if}	<th>High</th>	<th>Low</th></tr>{foreach from=$table key=code item=c}{cycle values="c2,c1" assign=row_class}<tr>	<td class="{$row_class}">{$sku.$code.sku_item_code}</td>	<td class="{$row_class}">{$sku.$code.description}</td>	<!-- Qunatity -->	<td class="{$row_class} r">	    {if strpos($c.qty,'.')}	        {$c.qty|number_format:2|ifzero:'-'}	    {else}	        {$c.qty|number_format|ifzero:'-'}	    {/if}	</td>	{if $category.total.qty ne 0}	{assign var=temp value=$c.qty/$category.total.qty}	{else}	{assign var=temp value=0}	{/if}	<td class="{$row_class} r">{$temp*100|number_format:2|ifzero:'-':'%'}</td>	<!-- End of Quantity-->	<!-- Amount-->	{if $row_class eq c1}{assign var=amt_class value=r1}{else}{assign var=amt_class value=r2}{/if}	<td class="{$amt_class} r">{$c.amount|number_format:2|ifzero:'-'}</td>	{if $category.total.amount ne 0}	{assign var=temp value=$c.amount/$category.total.amount}	{else}	{assign var=temp value=0}	{/if}	<td class="{$amt_class} r">{$temp*100|number_format:2|ifzero:'-':'%'}</td>	<!-- End of Amount-->		{if $sessioninfo.privilege.SHOW_REPORT_GP}		<!-- Gross Profit-->		<td class="{$row_class} r">{$c.cost_amt|number_format:2|ifzero:'-'}</td>		<td class="{$row_class} r">{$c.cost_per|number_format:2|ifzero:'-':'%'}</td>		<!-- End of Gross Profit -->	{/if}		<!-- Avg S.Price -->	{if $row_class eq c1}{assign var=amt_class value=r1}{else}{assign var=amt_class value=r2}{/if}	<td class="{$amt_class} r">{$c.avg|number_format:2|ifzero:'-'}</td>	<!-- End of AVG S.price -->		<!-- Selling Price-->	<td class="{$row_class} r">{$c.highest_sales|number_format:2|ifzero:'-'}</td>	<td class="{$row_class} r">{$c.lowest_sales|number_format:2|ifzero:'-'}</td>	<!-- Selling Price--></tr>{/foreach}<tr>    {cycle values="c2,c1" assign=row_class}    {if $row_class eq c1}{assign var=amt_class value=r1}{else}{assign var=amt_class value=r2}{/if}	<td class="{$row_class} r" colspan=2>Total</td>	<td class="{$row_class} r">	    {if strpos($category.total.qty,'.')}	        {$category.total.qty|number_format:2|ifzero:'-'}	    {else}	        {$category.total.qty|number_format|ifzero:'-'}	    {/if}	</td>	<td class="{$row_class} r">{if $category.total.qty ne 0}100.00%{else}-{/if}</td>	<td class="{$amt_class} r">{$category.total.amount|number_format:2|ifzero:'-'}</td>	<td class="{$amt_class} r">{if $category.total.amount ne 0}100.00%{else}-{/if}</td>	{if $sessioninfo.privilege.SHOW_REPORT_GP}		<td class="{$row_class} r">{$category.total.cost_amt|number_format:2|ifzero:'-'}</td>		<td class="{$row_class} r">{$category.total.cost_per|number_format:2|ifzero:'-':'%'}</td>	{/if}	<td class="{$amt_class} r">{$category.total.avg|number_format:2|ifzero:'-'}</td>	<td class="{$row_class} r">{$category.total.highest_sales|number_format:2|ifzero:'-'}</td>	<td class="{$row_class} r">{$category.total.lowest_sales|number_format:2|ifzero:'-'}</td></tr></table>{/if}{if !$no_header_footer}{include file=footer.tpl}{/if}